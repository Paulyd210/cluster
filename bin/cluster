#!/usr/bin/env php
<?php

require dirname(__DIR__) . "/vendor/autoload.php";

use Amp\Cluster\Cluster;
use Amp\Log\Logger;
use Amp\Log\Writer\ConsoleWriter;
use Amp\Loop;
use function Amp\Cluster\countCpuCores;

Loop::run(function () use ($argv, $argc) {
    if ($argc !== 2) {
        print "Usage: bin/cluster script.php\r\n";
        exit(1);
    }

    $logger = new Logger(new ConsoleWriter);
    $cluster = new Cluster($argv[1], $logger);

    yield $cluster->start(countCpuCores());

    Cluster::onTerminate(function () use ($cluster) {
        $cluster->stop();
    });
});
